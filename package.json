{
  "name": "Wapcon",
  "private": true,
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build-front": "cross-env NODE_ENV=production browserify -g envify -t vueify -e front/index.js -o build/front.js",
    "dev-front": "watchify -dv -t vueify -p browserify-hmr -e front/index.js -o build/front.js",
    "lint": "eslint --ext js,vue ./main.js front/**/*.js front/**/*.vue",
    "postinstall": "mkdir build || echo \"However it's OK.\"",
    "run": "electron .",
    "start": "npm run lint -s & concurrently \"npm run run -s\" \"npm run dev-front -s\"",
    "test": "npm run lint -s && cross-env NODE_ENV=test mocha test/**/*.test.js"
  },
  "dependencies": {
    "browserify": "^15.0.0",
    "electron": "^1.8.1",
    "envify": "^4.1.0",
    "font-awesome": "^4.7.0",
    "material-design-lite": "^1.3.0",
    "node-sass": "^4.7.2",
    "pug": "^2.0.0-rc.4",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "vueify": "^9.4.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "browserify-hmr": "^0.3.6",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.14.0",
    "eslint-plugin-html": "^4.0.1",
    "mocha": "^4.0.1",
    "sinon": "^4.1.3",
    "watchify": "^3.9.0"
  }
}
